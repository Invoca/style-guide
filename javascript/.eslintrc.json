{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "jquery": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "Backbone": false,
    "_": false,
    "JST": false,
    "Backdraft": false,
    "Dialog": false,
    "Invoca": false,
    "describe": false,
    "expect": false,
    "spyOn": false,
    "it": false,
    "jasmine": false,
    "beforeEach": false,
    "afterEach": false,
    "MockData": false,
    "xit": false,
    "app": false
  },
  "rules": {
    "indent": ["error", 2],
    "key-spacing": ["error", { "mode": "minimum" }],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "space-infix-ops": ["error", {"int32Hint": false}],
    "space-before-blocks": "error",
    "keyword-spacing": "error",
    "block-spacing": "error",
    "space-in-parens": "error",
    "eqeqeq": "error",
    "no-unneeded-ternary": ["error", { "defaultAssignment": false }],
    "space-before-function-paren": ["error", "never"],
    "semi": ["error", "always"],
    "quotes": "off"
  }
}
